<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane  alignment="CENTER" hgap="10" style="-fx-background-color: #1E88A0; -fx-padding: 20;" vgap="10" xmlns:fx="http://javafx.com/fxml/1"
          xmlns="http://javafx.com/javafx/17.0.12" fx:controller="s25.cs151.application.controllers.OfficeHoursController">

    <!-- Title -->
    <Label style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: white;" text="Campus Connect" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="0" />
    <Label style="-fx-text-fill: white; -fx-font-size: 14;" text="Define your semester hours here" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="1" />

    <!-- Semester Selection -->
    <Label style="-fx-font-size: 14; -fx-text-fill: white;" text="Semester:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
    <ComboBox fx:id="semesterComboBox" promptText="Select Semester" GridPane.columnIndex="1" GridPane.rowIndex="2" />

    <!-- Year Input -->
    <Label style="-fx-font-size: 14; -fx-text-fill: white;" text="Year:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
    <TextField fx:id="yearTextField" promptText="YYYY" GridPane.columnIndex="1" GridPane.rowIndex="3" />

    <!-- Error Message Label -->
    <Label fx:id="errorMessageLabel" style="-fx-text-fill: red; -fx-font-size: 12;" text="" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="4" />

    <!-- Office Hours Days Selection -->
    <Label style="-fx-font-size: 14; -fx-font-weight: bold; -fx-text-fill: white;" text="Select Available Days:" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="5" />

    <CheckBox fx:id="mondayCheckBox" text="Monday" GridPane.columnIndex="0" GridPane.rowIndex="6" />
    <CheckBox fx:id="tuesdayCheckBox" text="Tuesday" GridPane.columnIndex="0" GridPane.rowIndex="7" />
    <CheckBox fx:id="wednesdayCheckBox" text="Wednesday" GridPane.columnIndex="0" GridPane.rowIndex="8" />
    <CheckBox fx:id="thursdayCheckBox" alignment="CENTER" text="Thursday" GridPane.columnIndex="0" GridPane.rowIndex="9" />
    <CheckBox fx:id="fridayCheckBox" text="Friday" GridPane.columnIndex="0" GridPane.rowIndex="10" />

    <!-- Buttons -->
    <HBox spacing="10" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="11">
        <Button fx:id="cancelButton" onAction="#handleCancel" style="-fx-background-color: lightgray;" text="Cancel" />
        <Button fx:id="submitButton" onAction="#handleSubmit" style="-fx-background-color: #3B8EEA; -fx-text-fill: white;" text="Submit" />
    </HBox>
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>

</GridPane>
