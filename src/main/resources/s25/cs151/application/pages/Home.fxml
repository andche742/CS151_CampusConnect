<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="TOP_CENTER" prefHeight="430.0" prefWidth="654.0" spacing="10.0" style="-fx-background-color: #1E88A0; -fx-padding: 20;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="s25.cs151.application.controllers.HomeController">

    <!-- Top Right Icons -->
    <HBox alignment="TOP_RIGHT" spacing="1">
        <Button style="-fx-background-color: transparent; -fx-text-fill: white;" text="📅 Calendar" />
        <Button style="-fx-background-color: transparent; -fx-text-fill: white;" text="🔔 Notifications" />
    </HBox>

    <!-- Header -->
    <Label style="-fx-font-size: 26px; -fx-text-fill: white; -fx-font-weight: bold;" text="Campus Connect" />

    <!-- Welcome Section -->
    <VBox alignment="CENTER" spacing="3">
        <Label style="-fx-font-size: 18px; -fx-text-fill: white;" text="Welcome!" />
        <Label style="-fx-font-size: 12px; -fx-text-fill: white;" text="Helping you stay connected, one office hour at a time." />
    </VBox>

    <!-- Spacer to push the buttons downward slightly -->
    <Pane VBox.vgrow="ALWAYS" />
     <Button fx:id="officeHoursScheduleButton" onAction="#goToDefineAppointments"
             style="-fx-background-color: white; -fx-text-fill: #1E88A0;
             -fx-font-size: 16px; -fx-font-weight: bold;
              -fx-background-radius: 8; -fx-padding: 10 50;" text="Office Hours Schedule" />

    <!-- Centered Office Hours Schedule Button placed just above the main buttons -->
    <HBox alignment="CENTER" />

    <!-- Horizontally Centered Buttons -->
    <HBox alignment="CENTER" spacing="60">
        <Button fx:id="officeHoursButton" onAction="#goToOfficeHours" style="-fx-background-color: white; -fx-text-fill: #1E88A0; -fx-font-size: 14px; -fx-background-radius: 6;" text="⏰ Office Hours" />

        <Button fx:id="timeSlotsButton" onAction="#goToTimeSlots" style="-fx-background-color: white; -fx-text-fill: #1E88A0; -fx-font-size: 14px; -fx-background-radius: 6;" text="📅 Time Slots" />

        <Button fx:id="coursesButton" onAction="#goToCourses" style="-fx-background-color: white; -fx-text-fill: #1E88A0; -fx-font-size: 14px; -fx-background-radius: 6;" text="📚 Courses" />

        <Button fx:id="searchButton" onAction="#placeHolder" style="-fx-background-color: white; -fx-text-fill: #1E88A0; -fx-font-size: 14px; -fx-background-radius: 6;" text="🔍 Search" />
    </HBox>

    <!-- Spacer to balance bottom -->
    <Pane VBox.vgrow="ALWAYS" />

</VBox>
