<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane  alignment="CENTER" hgap="10" style="-fx-background-color: #1E88A0; -fx-padding: 20;" vgap="10" xmlns:fx="http://javafx.com/fxml/1"
          xmlns="http://javafx.com/javafx/23.0.2" fx:controller="s25.cs151.application.controllers.DefineTimeSlotsController">

    <!-- Title -->
    <Label style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: white;" text="Campus Connect" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="0" />
    <!-- <Label style="-fx-text-fill: white; -fx-font-size: 14;" text="Define your semester office hours here" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="1" /> -->

    <!-- From Time Selection -->
    <Label style="-fx-font-size: 14; -fx-text-fill: white;" text="Start Time:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
    <ComboBox fx:id="fromHourComboBox" promptText="Select Hour" GridPane.columnIndex="0" GridPane.rowIndex="3" />
    <ComboBox fx:id="fromMinuteComboBox" promptText="Select Minute" GridPane.columnIndex="1" GridPane.rowIndex="3" />

    <!-- To Time Selection -->
    <Label style="-fx-font-size: 14; -fx-text-fill: white;" text="End Time:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
    <ComboBox fx:id="toHourComboBox" promptText="Select Hour" GridPane.columnIndex="0" GridPane.rowIndex="6" />
    <ComboBox fx:id="toMinuteComboBox" promptText="Select Minute" GridPane.columnIndex="1" GridPane.rowIndex="6" />

    <!-- Error Message Label -->
    <Label fx:id="errorMessageLabel" style="-fx-text-fill: red; -fx-font-size: 12;" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="4" />

    <!-- Buttons -->
    <HBox spacing="10" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="11">
        <Button fx:id="cancelButton" onAction="#handleCancel" style="-fx-background-color: lightgray;" text="Cancel" />
        <Button fx:id="submitButton" onAction="#handleSubmit" style="-fx-background-color: #3B8EEA; -fx-text-fill: white;" text="Submit" />
    </HBox>
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints />
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>

</GridPane>
